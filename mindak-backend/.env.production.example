# ===========================================
# BACKEND PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this to .env.production and fill in your values

# Node Environment
NODE_ENV=production

# Server Configuration
HOST=0.0.0.0
PORT=8080

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mindak_agency
DB_USER=mindak_admin
DB_PASSWORD=change_this_to_secure_password
DB_SSL=false

# JWT Authentication
# Generate a secure random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=change_this_to_random_secret_min_32_chars
JWT_EXPIRES_IN_SECONDS=86400

# Password Encryption
# Higher values = more secure but slower (10-12 recommended for production)
PASSWORD_ENCRYPTION_SALT_ROUNDS=12

# Drizzle ORM Configuration
DRIZZLE_OUT=build/infra/database/migrations
DRIZZLE_SCHEMA=build/infra/database/schemas

# Optional: CORS Configuration
# CORS_ORIGIN=http://your-domain.com:3000

# Optional: File Upload Limits
# MAX_FILE_SIZE=10485760
